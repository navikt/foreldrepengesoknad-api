<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%-5level] [%thread] %logger{30} %m%n%rEx</pattern>
        </encoder>
    </appender>

	<root level="info">
		<appender-ref ref="stdout" />
	</root>

</configuration>